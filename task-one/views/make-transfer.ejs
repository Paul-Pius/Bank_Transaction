<html lang="en">
  <%- include("./partial/head.ejs") %>

  <body class="my-body-container">
    <%- include("./partial/navbar.ejs") %>

    <h2 class="purch text-center">Payment Point</h2>

    <div class="containerss">
      <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6 paynow">
          <form action="/users/make-transfer/balance" method="POST">
            <div class="form-group">
              <label for="acct">To: <%= name %></label>
              <label for="name">Account: <%= receiverAcct %></label>
              <input
                type="hidden"
                name="receiverAccount"
                value="<%= receiverAcct %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="amount">From: <%= account_no %></label>
              <p id="reference"></p>
              <input
                type="hidden"
                id="accountnumber"
                name="senderAccount"
                value="<%= account_no %>"
                required
              />
            </div>
            <div class="form-group">
              <label for="first-name">Amount:</label>
              <input type="number" name="amount" min="100" required />
            </div>
            <div class="form-group">
              <label for="last-name">Description:</label>
              <input type="text" name="description" required />
            </div>
            <div class="form-group">
              <label for="last-name">Password:</label>
              <input type="password" name="password" required />
            </div>
            <div class="form-submit">
              <button type="submit">Pay</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include("./partial/footer.ejs") %>
  </body>
</html>
